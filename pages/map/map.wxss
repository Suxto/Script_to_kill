/* pages/map/map.wxss */

page {
  height: 100%;
  width: 100%;
}

.container1 {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.movable-area {
  pointer-events: none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.movable-view {
  pointer-events: auto;
  height: 30px;
  width: 30px;
  background: rgb(37, 68, 47);
  text-align: center;
}

.map {
  position: absolute;
  height: 800px;
  width: 800px;
  display: block;
  z-index: 1;
}

.markers {
  position: relative;
  height: 60rpx;
  width: 60rpx;
  z-index: 2;
}


.xButton {
  width: 55rpx;
  height: 55rpx;
  position: relative;
  float: right;
  margin-right: 30rpx;
  margin-top: 50rpx;
}

.listText {
  margin-left: 20rpx;
  margin-right: 10rpx;
  color: rgb(24, 24, 24);
  font-size: xx-large;
  line-height: 120rpx;
  z-index: 3;
  word-wrap: break-word;
}


.sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 3;
  top: 0;
  left: 0;
  overflow-x: hidden;
  transition: 0.3s;
}

.listBackground {
  height: 100%;
  position: fixed;
  transition: 0.3s;
  z-index: 3;
}